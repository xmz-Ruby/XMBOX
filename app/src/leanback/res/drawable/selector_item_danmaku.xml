<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 焦点状态优先级最高 -->
    <item android:drawable="@drawable/shape_item_danmaku_focused" android:state_focused="true" />
    <!-- 选中且获得焦点 -->
    <item android:drawable="@drawable/shape_item_danmaku_focused" android:state_activated="true" android:state_focused="true" />
    <item android:drawable="@drawable/shape_item_danmaku_focused" android:state_selected="true" android:state_focused="true" />
    <!-- 选中但没有焦点 -->
    <item android:drawable="@drawable/shape_item_danmaku_selected" android:state_activated="true" />
    <item android:drawable="@drawable/shape_item_danmaku_selected" android:state_selected="true" />
    <!-- 默认状态 -->
    <item android:drawable="@drawable/shape_item_danmaku_normal" />
</selector>
